# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

GET /scrape                     controllers.SeedSites.scrape()
GET /crawlOne                   controllers.SitesCrawler.crawlOne()
GET /crawlOnes                  controllers.SitesCrawler.crawlOnes()
GET /crawlTwo                   controllers.SitesCrawler.crawlTwo()
GET /crawlTwos                  controllers.SitesCrawler.crawlTwos()
GET /crawlNeo                   controllers.SitesCrawler.crawlNeo()
GET /crawlNeos                   controllers.SitesCrawler.crawlNeos()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
